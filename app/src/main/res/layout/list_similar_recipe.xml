<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/oyster"
    app:cardElevation="8dp"
    android:id="@+id/similar_holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/similar_title"
            android:text="Similar Name"
            android:textColor="@color/dark_cyan"
            android:textStyle="bold"
            android:padding="8dp"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image_similar"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/similar_serving"
            android:text="Similar serving"
            android:textColor="@color/black"
            android:textStyle="italic|bold"
            android:padding="8dp"
            android:textAlignment="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>